{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES5",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@core": [
        "./src/core"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@store": [
        "./src/store"
      ],
      "@type": [
        "./src/type"
      ],
      "@root": [
        "./src"
      ],
      "@root/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
